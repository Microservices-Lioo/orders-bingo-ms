generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                    Int         @id @default(autoincrement())
  totalAmount           Float
  totalItems            Int
  status                OrderStatus
  paid                  Boolean     @default(false)
  paidAt                DateTime?
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  currency              Currency
  eventId               Int
  stripePaymentIntentId String?     @unique
  userId                Int
  sessionId             String?     @unique
  orderItems            OrderItem[]
}

model OrderItem {
  orderId   Int
  cardId    Int      @unique
  priceUnit Float
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  order     Order    @relation(fields: [orderId], references: [id])

  @@id([orderId, cardId])
}

enum Currency {
  USD
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  CANCELLED
}
